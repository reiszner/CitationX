        <offsets>
            <x-m>-3.300</x-m>
            <y-m>-1.135</y-m>
            <z-m>-0.925</z-m>
        </offsets>
    </model>

    <animation>
        <type>dist-scale</type>
        <object-name>landing-light-left-p</object-name>
        <factor>0.005</factor>
        <min>2.0</min>
        <max>10.0</max>
        <center>
            <x-m>-3.300</x-m>
            <y-m>-1.135</y-m>
            <z-m>-0.925</z-m>
        </center>
    </animation>

    <animation>
        <type>select</type>
        <object-name>landing-light-left-p</object-name>
        <condition>
            <property>sim/multiplay/generic/int[3]</property>
        </condition>
    </animation>

