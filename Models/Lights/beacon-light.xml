<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

    <path>Lights.ac</path>
    <nopreview/>

    <animation>
        <type>select</type>
        <!--object-name>light-volume</object-name-->
        <!--object-name>red-light-plate</object-name-->
        <object-name>green-light-plate</object-name>
        <object-name>white-light-plate</object-name>
        <object-name>blue-light-plate</object-name>
        <object-name>lnd-light-plate</object-name>
    </animation>

    <effect>
        <inherits-from>Effects/model-transparent</inherits-from>
        <object-name>red-light-plate</object-name>
    </effect>

    <animation>
        <type>noshadow</type>
        <object-name>red-light-plate</object-name>
    </animation>

    <animation>
        <type>alpha-test</type>
        <alpha-factor>0.01</alpha-factor>
    </animation>

<!-- default glance -->

    <animation>
        <type>scale</type>
        <object-name>red-light-plate</object-name>
        <property>sim/multiplay/generic/float[8]</property>
        <center>
            <x-m> 8.130</x-m>
            <y-m> 0.000</y-m>
            <z-m> 3.980</z-m>
        </center>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>red-light-plate</object-name>
        <object-name>light-volume</object-name>
        <offset-m>9.05192244775</offset-m>
        <axis>
            <x> 8.130</x>
            <y> 0.000</y>
            <z> 3.980</z>
        </axis>
    </animation>

    <animation>
        <type>billboard</type>
        <object-name>red-light-plate</object-name>
        <spherical type="bool">true</spherical>
    </animation>

    <animation>
        <type>dist-scale</type>
        <object-name>red-light-plate</object-name>
        <min>1</min>
        <interpolation>
            <entry><ind>    0 </ind><dep> 0.25 </dep></entry>
            <entry><ind>   20 </ind><dep> 0.50 </dep></entry>
            <entry><ind> 1500 </ind><dep> 5.00 </dep></entry>
        </interpolation>
    </animation>

    <animation>
        <type>select</type>
        <object-name>red-light-plate</object-name>
        <condition>
            <and>
                <not><property>sim/rendering/shaders/skydome</property></not>
                <property>sim/multiplay/generic/int[7]</property>
                <greater-than>
                    <property>sim/multiplay/generic/float[8]</property>
                    <value>0.01</value>
                </greater-than>
            </and>
        </condition>
    </animation>

<!-- procetural glance -->

    <model>
        <name>beacon-light-p</name>
        <path>beacon-light-p.xml</path>
        <offsets>
            <x-m> 8.130</x-m>
            <y-m> 0.000</y-m>
            <z-m> 3.980</z-m>
        </offsets>
    </model>

    <animation>
        <type>scale</type>
        <object-name>beacon-light-p</object-name>
        <property>sim/multiplay/generic/float[8]</property>
        <center>
            <x-m> 8.130</x-m>
            <y-m> 0.000</y-m>
            <z-m> 3.980</z-m>
        </center>
    </animation>

    <animation>
        <type>dist-scale</type>
        <object-name>beacon-light-p</object-name>
        <factor>0.005</factor>
        <min>1.0</min>
        <max>10.0</max>
        <center>
            <x-m> 8.130</x-m>
            <y-m> 0.000</y-m>
            <z-m> 3.980</z-m>
        </center>
    </animation>

    <animation>
        <type>select</type>
        <object-name>beacon-light-p</object-name>
        <condition>
            <and>
                <property>sim/rendering/shaders/skydome</property>
                <property>sim/multiplay/generic/int[7]</property>
                <greater-than>
                    <property>sim/multiplay/generic/float[8]</property>
                    <value>0.01</value>
                </greater-than>
            </and>
        </condition>
    </animation>

<!-- Rembrandt light -->

    <animation>
        <type>light</type>
        <light-type>point</light-type>
        <name>beacon-light-r</name>
        <object-name>light-volume</object-name>
        <nopreview/>
        <position>
            <x> 0.0</x>
            <y> 0.0</y>
            <z> 0.0</z>
            <!--x> 8.130</x>
            <y> 0.000</y>
            <z> 3.980</z-->
        </position>
        <direction>
            <x>  1.0 </x>
            <y>  0.0 </y>
            <z>  0.0 </z>
        </direction>
        <ambient>
            <r> 0.8 </r>
            <g> 0.2 </g>
            <b> 0.1 </b>
            <a> 1.0 </a>
        </ambient>
        <diffuse>
            <r> 0.8 </r>
            <g> 0.2 </g>
            <b> 0.1 </b>
            <a> 1.0 </a>
        </diffuse>
        <specular>
            <r> 0.8 </r>
            <g> 0.2 </g>
            <b> 0.1 </b>
            <a> 1.0 </a>
        </specular>
        <dim-factor>
            <property>sim/multiplay/generic/float[8]</property>
            <factor>1.0</factor>
            <offset>0</offset>
            <min>0</min>
            <max>1</max>
        </dim-factor>
        <attenuation>
            <c> 1.00 </c>
            <l> 0.99 </l>
            <q> 0.90 </q>
        </attenuation>
        <exponent>  1.0 </exponent>
        <cutoff>   20.0 </cutoff>
        <near-m>    0.0 </near-m>
        <far-m>    20.0 </far-m>
    </animation>

    <animation>
        <type>select</type>
        <object-name>beacon-light-r</object-name>
        <condition>
            <and>
                <property>/sim/rendering/rembrandt/enabled</property>
                <property>sim/multiplay/generic/int[7]</property>
                <greater-than>
                    <property>sim/multiplay/generic/float[8]</property>
                    <value>0.01</value>
                </greater-than>
            </and>
        </condition>
    </animation>

<!-- Compositor light -->

    <light>
        <name>beacon-light-c</name>
        <type>point</type>
        <position>
            <x-m> 8.130</x-m>
            <y-m> 0.000</y-m>
            <z-m> 3.980</z-m>
        </position>
        <ambient>
            <r>0.8</r>
            <g>0.2</g>
            <b>0.1</b>
            <a>1.0</a>
        </ambient>
        <diffuse>
            <r>0.8</r>
            <g>0.2</g>
            <b>0.1</b>
            <a>1.0</a>
        </diffuse>
        <specular>
            <r>0.8</r>
            <g>0.2</g>
            <b>0.1</b>
            <a>1.0</a>
        </specular>
        <dim-factor>
            <property>sim/multiplay/generic/float[8]</property>
        </dim-factor>
        <attenuation>
            <c>1.00</c>
            <l>0.99</l>
            <q>0.90</q>
        </attenuation>
        <range-m>20</range-m>
    </light>

    <animation>
        <type>select</type>
        <object-name>beacon-light-c</object-name>
        <condition>
            <property>sim/multiplay/generic/int[7]</property>
            <greater-than>
                <property>sim/multiplay/generic/float[8]</property>
                <value>0.01</value>
            </greater-than>
        </condition>
    </animation>

</PropertyList>
