<?xml version="1.0"?>

<PropertyList>

<fx>

    <engine>
        <name>left engine int</name>
        <path>Aircraft/CitationX/Sounds/eng-int.wav</path>
        <condition>
            <and>
                <property>sim/current-view/internal</property>
                <not>
                    <property>controls/engines/engine[0]/cutoff</property>
                </not>
            </and>
        </condition>
        <mode>looped</mode>
        <volume>
            <property>engines/engine[0]/fan</property>
            <factor>0.1</factor>
        </volume>
        <pitch>
            <property>engines/engine[0]/fan</property>
            <offset>0</offset>
            <factor>0.01</factor>
        </pitch>
        <position>
            <x>3</x>
            <y>1.7</y>
            <z>0.6</z>
        </position>
        <reference-dist>10.0</reference-dist>
        <max-dist>150.0</max-dist>
    </engine>

    <engine>
        <name>right engine int</name>
        <path>Aircraft/CitationX/Sounds/eng-int.wav</path>
        <condition>
            <and>
                <property>sim/current-view/internal</property>
                <not>
                    <property>controls/engines/engine[1]/cutoff</property>
                </not>
            </and>
        </condition>
        <mode>looped</mode>
        <volume>
            <property>engines/engine[1]/fan</property>
            <factor>0.1</factor>
        </volume>
        <pitch>
            <property>engines/engine[1]/fan</property>
            <offset>0</offset>
            <factor>0.01</factor>
        </pitch>
        <position>
            <x>3</x>
            <y>-1.7</y>
            <z>0.6</z>
        </position>
        <reference-dist>10.0</reference-dist>
        <max-dist>150.0</max-dist>
    </engine>

    <engine>
        <name>left engine ext</name>
        <path>Aircraft/CitationX/Sounds/eng-ext.wav</path>
        <condition>
            <and>
                <not>
                    <property>sim/current-view/internal</property>
                </not>
                <not>
                    <property>controls/engines/engine[0]/cutoff</property>
                </not>
            </and>
        </condition>
        <mode>looped</mode>
        <volume>
            <property>engines/engine[0]/fan</property>
            <factor>0.01</factor>
        </volume>
        <pitch>
            <property>engines/engine[0]/fan</property>
            <offset>0.0</offset>
            <factor>0.01</factor>
        </pitch>
        <position>
            <x>4.5</x>
            <y>1.7</y>
            <z>0.6</z>
        </position>
        <reference-dist>10.0</reference-dist>
        <max-dist>2000.0</max-dist>
    </engine>

    <engine>
        <name>right engine ext</name>
        <path>Aircraft/CitationX/Sounds/eng-ext.wav</path>
        <condition>
            <and>
                <not>
                    <property>sim/current-view/internal</property>
                </not>
                <not>
                    <property>controls/engines/engine[1]/cutoff</property>
                </not>
            </and>
        </condition>
        <mode>looped</mode>
        <volume>
            <property>engines/engine[1]/fan</property>
            <factor>0.01</factor>
        </volume>
        <pitch>
            <property>engines/engine[1]/fan</property>
            <offset>0.0</offset>
            <factor>0.01</factor>
        </pitch>
        <position>
            <x>4.5</x>
            <y>-1.7</y>
            <z>0.6</z>
        </position>
        <reference-dist>10.0</reference-dist>
        <max-dist>2000.0</max-dist>
    </engine>

    <gear>
        <name>gear</name>
        <path>Aircraft/CitationX/Sounds/gear.wav</path>
        <property>gear/gear[0]/position-norm</property>
        <mode>in-transit</mode>
        <volume>
            <property>sim/sound/volume</property>
            <factor>0.5</factor>
        </volume>
        <pitch>
            <internal>dt_play</internal>
            <offset>0.8</offset>
            <factor>0.001</factor>
        </pitch>
        <position>
            <x>-7</x>
            <y>0</y>
            <z>0</z>
        </position>
        <reference-dist>1.0</reference-dist>
        <max-dist>10.0</max-dist>
    </gear>

    <gear>
        <name>gear-lock</name>
        <path>Sounds/gear-lck.wav</path>
        <condition>
            <equals>
                <property>gear/gear[0]/position-norm</property>
                <value>0</value>
            </equals>
        </condition>
        <position>
            <x>-7</x>
            <y>0</y>
            <z>0</z>
        </position>
        <reference-dist>2.0</reference-dist>
        <max-dist>10.0</max-dist>
    </gear>

    <squeal>
        <name>squeal1</name>
        <mode>once</mode>
        <reference-dist>20.0</reference-dist>
        <max-dist>40.0</max-dist>
        <path>Sounds/squeal2.wav</path>
        <condition>
            <and>
                <property>gear/gear[1]/wow</property>
                <property>gear/gear[1]/ground-is-solid</property>
            </and>
        </condition>
        <volume>
            <property>gear/gear[1]/wow</property>
        </volume>
        <volume>
            <property>velocities/airspeed-kt</property>
            <factor>0.02</factor>
        </volume>
        <position>
            <x>0</x>
            <y>0</y>
            <z>-2</z>
        </position>
    </squeal>

    <squeal>
        <name>squeal2</name>
        <mode>once</mode>
        <reference-dist>20.0</reference-dist>
        <max-dist>40.0</max-dist>
        <path>Sounds/squeal2.wav</path>
        <condition>
            <and>
                <property>gear/gear[2]/wow</property>
                <property>gear/gear[2]/ground-is-solid</property>
            </and>
        </condition>
        <volume>
            <property>gear/gear[2]/wow</property>
        </volume>
        <volume>
            <property>velocities/airspeed-kt</property>
            <factor>0.02</factor>
        </volume>
        <position>
            <x>0</x>
            <y>0</y>
            <z>-2</z>
        </position>
    </squeal>

    <rumble>
        <name>rumble</name>
        <mode>looped</mode>
        <path>Aircraft/CitationX/Sounds/rumble.wav</path>
        <condition>
            <or>
                <property>gear/gear[0]/wow</property>
                <property>gear/gear[1]/wow</property>
                <property>gear/gear[2]/wow</property>
            </or>
        </condition>
        <volume>
            <property>velocities/groundspeed-kt</property>
            <factor>0.1</factor>
            <min>0</min>
            <max>1</max>
        </volume>
        <position>
            <x>0</x>
            <y>0</y>
            <z>-1</z>
        </position>
        <reference-dist>2.0</reference-dist>
        <max-dist>20.0</max-dist>
    </rumble>

    <flap>
        <name>flaps</name>
        <mode>in-transit</mode>
        <path>Aircraft/CitationX/Sounds/Flaps.wav</path>
        <property>surface-positions/flap-pos-norm</property>
        <volume>
            <property>sim/sound/volume</property>
            <max>0.7</max>
            <factor>0.6</factor>
        </volume>

        <!--volume>
            <property>sim/sound/ext-volume</property>
        </volume-->

        <position>
            <x>0</x>
            <y>0</y>
            <z>0</z>
        </position>
        <reference-dist>60.0</reference-dist>
        <max-dist>6000.0</max-dist>
    </flap>

    <speedbrake>
        <name>speedbrake</name>
        <path>Aircraft/CitationX/Sounds/Flaps.wav</path>
        <property>surface-positions/speedbrake-pos-norm</property>
        <mode>in-transit</mode>
        <volume>
            <property>sim/sound/volume</property>
            <max>0.7</max>
            <factor>0.6</factor>
        </volume>
        <position>
            <x>0</x>
            <y>0</y>
            <z>0</z>
        </position>
        <reference-dist>60.0</reference-dist>
        <max-dist>6000.0</max-dist>
    </speedbrake>

    <wind>
        <name>wind</name>
        <condition>
        <property>sim/current-view/internal</property>
        </condition>
        <path>Sounds/wind.wav</path>
        <property>velocities/airspeed-kt</property>
        <mode>looped</mode>
        <volume>
            <property>velocities/airspeed-kt</property>
            <factor>0.0005</factor>
            <min>0.0</min>
            <max>0.3</max>
        </volume>
        <pitch>
            <property>velocities/airspeed-kt</property>
            <factor>0.01</factor>
            <offset>1.0</offset>
        </pitch>
        <position>
            <x>-8</x>
            <y>0</y>
            <z>0.</z>
        </position>
        <reference-dist>1</reference-dist>
        <max-dist>5.0</max-dist>
    </wind>

    <click>
        <name>click1</name>
        <path>Sounds/click.wav</path>
        <type>avionics</type>
        <condition>
            <property>sim/sound/click</property>
        </condition>
    </click>

    <click>
        <name>click2</name>
        <path>Sounds/click.wav</path>
        <type>avionics</type>
        <condition>
            <not>
                <property>sim/sound/click</property>
            </not>
        </condition>
    </click>

    <warnings>
        <name>chime1</name>
        <type>avionics</type>
        <path>Aircraft/CitationX/Sounds/chime1.wav</path>
        <property>instrumentation/annunciators/master-caution</property>
        <mode>once</mode>
    </warnings>

    <warnings>
        <name>chime1</name>
        <type>fx</type>
        <path>Aircraft/CitationX/Sounds/chime1.wav</path>
	<condition>
	<equals>
        <property>autopilot/locks/altitude</property>
	<value>ALT</value>
	</equals>
	</condition>
        <mode>once</mode>
    </warnings>

    <warnings>
        <name>chime2</name>
        <type>avionics</type>
        <path>Aircraft/CitationX/Sounds/chime2.wav</path>
        <property>instrumentation/annunciators/master-warning</property>
        <mode>looped</mode>
    </warnings>

    <warnings>
        <name>gear-horn</name>
        <type>avionics</type>
        <path>Aircraft/CitationX/Sounds/horn.wav</path>
        <property>sim/sound/stall-horn</property>
        <mode>once</mode>
    </warnings>

    </fx>


</PropertyList>
